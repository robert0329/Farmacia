@model IEnumerable<Farmacia.Models.Ventas>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoVentaId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Medicina)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaVenta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
